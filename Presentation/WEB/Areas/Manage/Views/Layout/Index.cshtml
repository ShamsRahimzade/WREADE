@using Wreade.Domain.Entities
@model PaginationVM<Setting>
@{
	int count = 0;
}
<main>
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Setting Table</h4>
				<input asp-action="Search" type="search" placeholder="Name">
				<a asp-action="create" asp-controller="layout" style="font-size: 24px;">
					<i class="mdi mdi-library-plus"></i>
				</a>
				<div class="table-responsive">
					<table class="table table-striped">
						<thead>
							<tr>
								<th> NO </th>
								<th> Key</th>
								<th> Value </th>
								<th> SETTINGS </th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model.Items)
							{
								count++;
								<tr>
									<td> @count</td>
									
									<td> @item.Key </td>
									<td> @item.Value</td>
								

									<td><a asp-action="update" asp-controller="layout" asp-route-id="@item.Id"><button type="button" class="btn btn-inverse-dark btn-fw">Update</button></a></td>

									<td><a asp-action="delete" asp-controller="layout" asp-route-id="@item.Id"><button type="button" class="btn btn-inverse-dark btn-fw">Delete</button></a></td>

								</tr>
							}
						</tbody>
					</table>
				</div>
				<div class="w-100 d-flex justify-content-center">
					<nav>
						<ul class="pagination justify-content-center">
							<li class="page-item @(Model.CurrentPage<=1 ? "disabled" : "active")">
								<a class="page-link " asp-route-page="@(Model.CurrentPage-1)" asp-action="index" asp-controller="layout" aria-label="Previous">
									<span aria-hidden="true">&laquo;</span>
									<span class="sr-only">Previous</span>
								</a>
							</li>
							@for (int i = 0; i < Model.TotalPage; i++)
							{
								<li class="page-item @(Model.CurrentPage-1==i ? "btn-success active disabled" : "")">
									<a class="page-link" asp-route-page="@(i+1)" asp-action="index" asp-controller="layout">@(i + 1)</a>
								</li>
							}
							<li class="page-item @(Model.TotalPage==Model.CurrentPage ? "disabled" : "active")">
								<a class="page-link " asp-route-page="@(Model.CurrentPage+1)" asp-action="index" asp-controller="layout" aria-label="Next">
									<span aria-hidden="true">&raquo;</span>
									<span class="sr-only">Next</span>
								</a>
							</li>
						</ul>

					</nav>
				</div>
			</div>
		</div>
	</div>



</main>
