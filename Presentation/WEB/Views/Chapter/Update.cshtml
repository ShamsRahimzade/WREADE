@model UpdateChapterVM
<main>
	<div class="container">
		<div class="page-title-container">

		
			<h1 class="mb-0 pb-0 display-4" id="title">Chapter </h1>
			<div class="col-md-6 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Create Chapter</h4>
						<p class="card-description">
							Basic form layout
						</p>
						<form method="post" enctype="multipart/form-data">
							<div asp-validation-summary="ModelOnly"></div>
							<div class="form-group">
								<img style="width:100px; height:100px;" src="~/assets/assets/img/@Model.Image" alt="image">
								<input type="hidden"></input>
								<label asp-for="Photo" for="exampleInputUsername1">Photo</label>
								<input asp-for="Photo" class="form-control" id="exampleInputUsername1" placeholder="Photo">
								<span asp-validation-for="Photo" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Title" for="exampleInputUsername1">Title</label>
								<input asp-for="Title" class="form-control" id="exampleInputUsername1" placeholder="Title">
								<span asp-validation-for="Title" class="text-danger"></span>
							</div>


							<div class="form-group">
								<label asp-for="Text" for="exampleInputUsername1">Text</label>
								<input asp-for="Text" class="form-control" id="exampleInputUsername1" placeholder="Text">
								<span asp-validation-for="Text" class="text-danger"></span>
							</div>
							<button type="submit" class="btn btn-primary mr-2">Submit</button>
							<button asp-action="index" asp-controller="chapter" class="btn btn-light">Cancel</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>


</main>
