
@model PaginationVM<Chapter>
@{
	int count = 0;
}
<main>

	<!-- details-section - start
	================================================== -->
	<section id="details-section" class="details-section blog-details sec-ptb-100 text-center clearfix">
		<div class="container">
			<div class="row justify-content-center">
				@foreach (var item in Model.Items.Where(i=>i.BookId==Model.BookId))
				{
					count++;
					<div class="col-lg-10 col-md-10 col-sm-11 col-xs-12">
						<div class="details-content" data-aos="fade-up" data-aos-delay="100">
							<h2 class="item-title">@item.Title</h2>
							<div class="post-meta ul-li-center mb-60 clearfix">
								<ul class="clearfix">

									@* <li><a href="#!">@item.Book.User.UserName</a></li> *@
								</ul>
							</div>
						</div>

						<div class="details-image h-auto mb-60" data-aos="fade-up" data-aos-delay="300">
							<img style="width:300px;height:300px;border-radius:25px;" src="~/assets/assets/img/@item.ChapterImage" alt="image_not_found"><br /><br />
						</div>

						<div class="details-content mb-100">
							<p class="mb-60" data-aos="fade-up" data-aos-delay="200">
								@item.Text
							</p>



						


						</div>


					</div>
				}
				<div class="w-100 d-flex justify-content-center">
					<nav>
						<ul class="pagination justify-content-center">
							<li class="page-item @(Model.CurrentPage<=1 ? "disabled" : "active")">
								<a class="page-link " asp-route-page="@(Model.CurrentPage-1)" asp-action="detail" asp-controller="chapter"  asp-route-bookId="@Model.BookId" aria-label="Previous">
									<span aria-hidden="true">&laquo;</span>
									<span class="sr-only">Previous</span>
								</a>
							</li>
							<li class="page-item @(Model.TotalPage==Model.CurrentPage ? "disabled" : "active")">
								<a class="page-link " asp-route-page="@(Model.CurrentPage+1)" asp-action="detail" asp-controller="chapter" asp-route-bookId="@Model.BookId" aria-label="Next">
									<span aria-hidden="true">&raquo;</span>
									<span class="sr-only">Next</span>
								</a>
							</li>
						</ul>
					</nav>
				</div>

			</div>
		</div>

	</section>
</main>