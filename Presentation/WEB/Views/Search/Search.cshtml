@model SearchVM



<main>


	<!-- breadcrumb-section - start
	================================================== -->
	<section id="breadcrumb-section" class="breadcrumb-section sec-ptb-100 pb-0 clearfix">
		<div class="container">
			<div class="row align-items-center justify-content-lg-between justify-content-md-between justify-content-sm-center">
				<div class="col-lg-8 col-md-8 col-sm-7 col-xs-12">
					<h2 class="page-title mb-0 aos-init aos-animate" data-aos="fade-right" data-aos-delay="100">Search items</h2>
				</div>


			</div>
		</div>
	</section>
	<!-- breadcrumb-section - end
	================================================== -->
	<!-- shop-section - start
	================================================== -->
	<section id="shop-section" class="shop-section sec-ptb-100 clearfix">
		<div class="container">
			<div class="row justify-content-lg-between justify-content-md-center justify-content-sm-center">
				<div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
					<div class="filter-bar">
						<div class="row">

							<div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
								<div class="result-text aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
									<p class="mb-0">
										@if (Model.books.Count == 1)
										{
											<span>@Model.books.Count  Book Found</span>
										}
										else if (Model.books.Count == 0)
										{
											<text> Book not found</text>
										}
										else
										{
											<span>@Model.books.Count  Books Found</span>
										}

									</p>
								</div>
							</div>



						</div>
					</div>

					<div class="tab-content">
						
							<div class="col-6">
								@if (Model.books.Any())
								{
									@foreach (var item in Model.books)
									{
										<div class="blog-list clearfix" data-aos="fade-up" data-aos-delay="100">
											<a asp-action="detail" asp-controller="book" asp-route-id="@item.Id" class="item-image">
												<img src="~/assets/assets/img/@item.CoverPhoto" style="height:100px;" alt="image_not_found">
											</a>
											<div class="item-content">
												<h3 class="item-title">
													<a asp-action="detail" asp-controller="book" asp-route-id="@item.Id">
														@item.Name
													</a>
												</h3>
												<div class="post-meta ul-li mb-30 clearfix">
													<ul class="clearfix">
														<li>
														@if (@item.IsCompleted == true)
														{
															<span style="background-color:green;">Completed</span>
														}
														else
														{
															<span style="background-color:yellow;">OnGoing</span>

														}
														</li>
														<li><a asp-action="user" asp-controller="profile" asp-route-username="@item.CreatedBy">@item.CreatedBy</a></li>
													</ul>
												</div>
												<p class="mb-0">
													@item.Description
												</p>
											</div>
										</div>
									}
								}
								else
								{
									<br>
									<img style="justify-content:center" src="~/assets/images/error.jpg" alt="image_not_found">
								}
							</div>
						


					</div>
				</div>


			</div>
		</div>
	</section>
	<!-- shop-section - end
	================================================== -->


</main>