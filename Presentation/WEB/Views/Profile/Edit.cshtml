@model EditProfileVM
<main>
	<div class="container">
		<div class="page-title-container">


			<h1 class="mb-0 pb-0 display-4" id="title">Profile </h1>
			<div class="col-md-6 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Edit Profile</h4>
						
						<form method="post" enctype="multipart/form-data">
							<div asp-validation-summary="ModelOnly"></div>
							<div class="form-group">
								<img style="width:100px; height:100px;" src="~/assets/assets/img/@Model.MainImage" alt="image">
								<input type="hidden"></input>
								<label asp-for="MainImageFile" for="exampleInputUsername1">Profile Image</label>
								<input asp-for="MainImageFile" class="form-control" id="exampleInputUsername1" placeholder="Photo">
								<span asp-validation-for="MainImageFile" class="text-danger"></span>
							</div>
							<div class="form-group">
								<img style="width:100px; height:100px;" src="~/assets/assets/img/@Model.BackImage" alt="image">
								<input type="hidden"></input>
								<label asp-for="BackImageFile" for="exampleInputUsername1">Background Image</label>
								<input asp-for="BackImageFile" class="form-control" id="exampleInputUsername1" placeholder="Photo">
								<span asp-validation-for="BackImageFile" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Name" for="exampleInputUsername1">Title</label>
								<input asp-for="Name" class="form-control" id="exampleInputUsername1" placeholder="Title">
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>


							<div class="form-group">
								<label asp-for="Surname" for="exampleInputUsername1">Surname</label>
								<input asp-for="Surname" class="form-control" id="exampleInputUsername1" placeholder="Surname">
								<span asp-validation-for="Surname" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Username" for="exampleInputUsername1">Username</label>
								<input asp-for="Username" class="form-control" id="exampleInputUsername1" placeholder="Username">
								<span asp-validation-for="Username" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="SelfInformation" for="exampleInputUsername1">SelfInformation</label>
								<input asp-for="SelfInformation" class="form-control" id="exampleInputUsername1" placeholder="SelfInformation">
								<span asp-validation-for="SelfInformation" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Twitter" for="exampleInputUsername1">Twitter</label>
								<input asp-for="Twitter" class="form-control" id="exampleInputUsername1" placeholder="Twitter">
								<span asp-validation-for="Twitter" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Instagram" for="exampleInputUsername1">Instagram</label>
								<input asp-for="Instagram" class="form-control" id="exampleInputUsername1" placeholder="Instagram">
								<span asp-validation-for="Instagram" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Facebook" for="exampleInputUsername1">Facebook</label>
								<input asp-for="Facebook" class="form-control" id="exampleInputUsername1" placeholder="Facebook">
								<span asp-validation-for="Facebook" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Email" for="exampleInputUsername1">Email</label>
								<input asp-for="Email" class="form-control" id="exampleInputUsername1" placeholder="Email">
								<span asp-validation-for="Email" class="text-danger"></span>
							</div>
							
							<div class="form-group">
								<label asp-for="CurrentPassword" for="exampleInputUsername1">CurrentPassword</label>
								<input asp-for="CurrentPassword" class="form-control" id="exampleInputUsername1" placeholder="CurrentPassword">
								<span asp-validation-for="CurrentPassword" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="NewPassword" for="exampleInputUsername1">NewPassword</label>
								<input asp-for="NewPassword" class="form-control" id="exampleInputUsername1" placeholder="NewPassword" >
								<span asp-validation-for="NewPassword" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="ConfirmPassword" for="exampleInputUsername1">ConfirmPassword</label>
								<input asp-for="ConfirmPassword" class="form-control" id="exampleInputUsername1" placeholder="ConfirmPassword" >
								<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
							</div>
							<button type="submit" class="btn btn-primary mr-2">Submit</button>
							<button asp-action="index" asp-controller="chapter" class="btn btn-light">Cancel</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>


</main>
