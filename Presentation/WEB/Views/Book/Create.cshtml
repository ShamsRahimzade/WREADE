@model BookCreateVM
<div class="container col-md-6">
	<form method="post" enctype="multipart/form-data">
		<div class="row g-6 mx-auto">
			<div class="col-12 col-sm-6">
				<label asp-for="CoverPhoto" for="exampleInputUsername1">CoverPhoto</label>
				<input asp-for="CoverPhoto" class="form-control" id="exampleInputUsername1" placeholder="CoverPhoto">
				<span asp-validation-for="CoverPhoto" class="text-danger"></span>
			</div>
			<div class="col-12 col-sm-6">
				<label asp-for="Name" for="exampleInputUsername1">Name</label>
				<input asp-for="Name" class="form-control" id="exampleInputUsername1" placeholder="Name">
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="col-12 col-sm-6">
				<label asp-for="TagIds">Tag</label>
				<select asp-for="TagIds" asp-items="new SelectList(Model.Tags,nameof(Tag.Id),nameof(Tag.Name))">
					<option selected disabled>Select one</option>
				</select>
				<span asp-validation-for="TagIds" class="text-danger"> </span>
			</div>
			<div class="col-12 col-sm-6">
				<label asp-for="CategoryIds">Category</label>
				<select asp-for="CategoryIds" asp-items="new SelectList(Model.Categories,nameof(Category.Id),nameof(Category.Name))">
					<option selected disabled>Select one</option>
				</select>
				<span asp-validation-for="CategoryIds" class="text-danger"> </span>
			</div>
			<div class="col-12">
				<label asp-for="Description" for="exampleInputUsername1">Description</label>
				<input asp-for="Description" class="form-control" id="exampleInputUsername1" placeholder="Description">
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="col-12">
				<label asp-for="IsAdult" for="exampleInputUsername1">IsAdult</label>
				<input asp-for="IsAdult" class="form-control" id="exampleInputUsername1" placeholder="IsAdult">
				<span asp-validation-for="IsAdult" class="text-danger"></span>
			</div>
			<div class="col-12">
				<label asp-for="IsCompleted" for="exampleInputUsername1">IsCompleted</label>
				<input asp-for="IsCompleted" class="form-control" id="exampleInputUsername1" placeholder="IsCompleted">
				<span asp-validation-for="IsCompleted" class="text-danger"></span>
			</div>
			<div class="col-12">
				<button class="btn btn-primary w-100 py-3" type="submit">Submit</button>
			</div>
		</div>
	</form>
</div>


