@model PaginationVM<Book>
<main>


	<!-- breadcrumb-section - start

	<!-- blog-section - start
	================================================== -->
	<section id="blog-section" class="blog-section sec-ptb-100 clearfix">
		<div class="container">

			<div class="section-title text-center mb-30" data-aos="fade-up" data-aos-delay="100">
				<h2 class="title-text mb-15">Our Tag</h2>
				<p class="mb-0"></p>
			</div>

			<div class="row">
				@foreach (var item in Model.Items)
				{
					<div class="col-6">
						<div class="blog-grid clearfix" data-aos="fade-up" data-aos-delay="300">
							<a href="#!" class="blog-image">
								<img src="~/assets/assets/img/@item.BookCategories.FirstOrDefault(bc=>bc.BookId==bc.Book.Id).Book.CoverPhoto" style="height:100px;" alt="image_not_found">
							</a>
							<h3 class="item-title">
								<a asp-action="detail" asp-controller="book" asp-route-id="@item.BookTags.FirstOrDefault(bc=>bc.BookId==bc.Book.Id).Book.Id">
									@item.BookTags.FirstOrDefault(bc=>bc.BookId==bc.Book.Id).Book.Name
								</a>
							</h3>
							<div class="post-meta ul-li clearfix">
								<ul class="clearfix">
									<li>@item.BookTags.FirstOrDefault(bc=>bc.BookId==bc.Book.Id).Book.CreatedAt</li>
									<li><a asp-action="user" asp-controller="profile" asp-route-username="@User.Identity.Name">@item.BookTags.FirstOrDefault(bc=>bc.BookId==bc.Book.Id).Book.CreatedBy</a></li>
								</ul>
							</div>
						</div>
					</div>

				}

			</div>

		</div>
	</section>
	<!-- blog-section - end
	================================================== -->


</main>