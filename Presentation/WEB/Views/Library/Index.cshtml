@model List<LibraryItemVM>
@inject List<Book> books
<main>


	<!-- breadcrumb-section - start
	================================================== -->
	<section id="breadcrumb-section" class="breadcrumb-section sec-ptb-100 pb-0 clearfix">
		<div class="container">
			<div class="row align-items-center justify-content-lg-between justify-content-md-between justify-content-sm-center">
				<div class="col-lg-8 col-md-8 col-sm-7 col-xs-12">
					<h2 class="page-title mb-0 aos-init aos-animate" data-aos="fade-right" data-aos-delay="100">My Library</h2>
				</div>

				<div class="col-lg-4 col-md-4 col-sm-7 col-xs-12">
					<div class="breadcrumb-nev ul-li-right clearfix aos-init aos-animate" data-aos="fade-left" data-aos-delay="300">
						<ul class="clearfix">
							<li><a asp-action="index" asp-controller="home"><i class="fas fa-home mr-1"></i>Home</a></li>
							<li><i class="fas fa-chevron-circle-right mr-1"></i> Library</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- breadcrumb-section - end
	================================================== -->
	<!-- shop-section - start
	================================================== -->
	<section id="shop-section" class="shop-section sec-ptb-100 clearfix">
		<div class="container">
			<div class="row justify-content-lg-between justify-content-md-center justify-content-sm-center">
				<div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
					<div class="filter-bar">
						<div class="row">

							<div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
								<div class="result-text aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
									<p class="mb-0">
										@if (Model.Count==1)
										{
											<span>@Model.Count  Book Found</span>
										}else
										{
											<span>@Model.Count  Books Found</span>
										}
										
									</p>
								</div>
							</div>

							

						</div>
					</div>

					<div class="tab-content">
						<div id="grid-layout" class="tab-pane active">
							<div class="row mb-100">
							@foreach (var item in Model)
								{
									<div class="col-lg-4 col-md-3 col-sm-4 col-xs-12">
										<div class="product-grid aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
											<a class="item-image" asp-action="detail" asp-controller="book" asp-route-id="@item.BookId">
												<img src="~/assets/images/@item.book.CoverPhoto" alt="image_not_found">
											</a>

											<div class="item-content text-center">
												<h3 class="item-title">
													<a href="#!">@item.book.Name</a>
												</h3>
												@* <span class="item-price">@item.Book.Chapters.Count</span> *@
											</div>

											<div class="action-content clearfix">
												<div class="btns-group ul-li-right clearfix">
													<a asp-action="AddToLibrary" asp-controller="library" asp-route-userId="@item.AppUserid" asp-route-bookId="@item.BookId" class="addtocart-btn"><i class="fas fa-plus mr-2"></i> add to library</a>
													
													<ul class="clearfix">
														<li>
															<button type="button"><i class="far fa-expand-arrows-alt"></i></button>
														</li>
														<li>
															<button type="button"><i class="fas fa-heart"></i></button>
														</li>
													</ul>
												</div>
												<div class="rating-star ul-li clearfix">
													<ul class="clearfix">
														<li class="active"><i class="fas fa-star"></i></li>
														<li class="active"><i class="fas fa-star"></i></li>
														<li class="active"><i class="fas fa-star"></i></li>
														<li class="active"><i class="fas fa-star"></i></li>
														<li><i class="fas fa-star"></i></li>
													</ul>
												</div>
											</div>
										</div>
									</div>
								}

							</div>
						</div>

							
					</div>
				</div>

				<div class="col-lg-3 col-md-5 col-sm-6 col-xs-12">
					<aside id="sidebar-section" class="sidebar-section">

					

						<div class="widget widget-blogs clearfix aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
							<h3 class="widget-title"><span>TOP SELLER</span></h3>
							<div class="items-list ul-li-block clearfix">
								<ul class="clearfix">
									@foreach (var item in books.OrderByDescending(b=>b.Chapters.Count).Take(3))
									{
										<li>
											<div class="small-blog clearfix">
												<a href="#!" class="item-image">
													<img src="~/assets/images/@item.CoverPhoto" alt="image_not_found">
												</a>
												<div class="item-content">
													<h3 class="item-title">
														<a href="#!">@item.Name</a>
													</h3>
													<span class="item-price">@item.Chapters.Count</span>
													<div class="rating-star ul-li">
														<ul class="clearfix">
															<li class="active"><i class="fas fa-star"></i></li>
															<li class="active"><i class="fas fa-star"></i></li>
															<li class="active"><i class="fas fa-star"></i></li>
															<li class="active"><i class="fas fa-star"></i></li>
															<li><i class="fas fa-star"></i></li>
														</ul>
													</div>
												</div>
											</div>
										</li>
									}

								</ul>
							</div>
						</div>

					</aside>
				</div>
			</div>
		</div>
	</section>
	<!-- shop-section - end
	================================================== -->


</main>